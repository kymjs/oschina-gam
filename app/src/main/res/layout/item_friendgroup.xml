<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <org.kymjs.kjframe.widget.RoundImageView
            android:id="@+id/item_friendgroup_img_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="6dp"/>

        <TextView
            android:id="@+id/item_friendgroup_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/item_friendgroup_img_head"
            android:layout_toRightOf="@id/item_friendgroup_img_head"
            android:padding="2dp"
            android:singleLine="true"
            android:textColor="#333"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/item_friendgroup_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_friendgroup_img_head"
            android:layout_toRightOf="@id/item_friendgroup_img_head"
            android:padding="2dp"
            android:singleLine="true"
            android:textColor="#999"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/item_friendgroup_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_friendgroup_img_head"
            android:layout_below="@id/item_friendgroup_img_head"
            android:layout_margin="5dp"
            android:textColor="#333"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/item_friendgroup_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_friendgroup_tv_content"
            android:layout_margin="6dp"
            android:scaleType="fitStart"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>